<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF4C0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView"
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아래 버튼을 사용하며 RGB색상값을 바꿔 보세요."
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R+"
            android:id="@+id/Rplus" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R-"
            android:id="@+id/Rminus" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G+"
            android:id="@+id/Gplus" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G-"
            android:id="@+id/Gminus" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B+"
            android:id="@+id/Bplus" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B-"
            android:id="@+id/Bminus" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Random"
            android:id="@+id/randomButton" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="red: 100 green:100 blue:100"
        android:textSize="18dp"
        android:id="@+id/showRGB" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:background="#646464"
        android:id="@+id/bcolor"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="메인화면으로 이동하기"
        android:id="@+id/button" />

    </LinearLayout>
</LinearLayout>